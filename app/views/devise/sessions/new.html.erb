<% content_for :title, "Entrar" %>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<div class="panel panel-default container">
  <div class="painel-heading"><h2> Acessar </h2> </div>
  <div class="painel-body">
    <div class="form-inputs">
      <%= f.input :email, required: false, autofocus: true %>
      <%= f.input :password,label: 'Senha', required: false %>
      <%= f.input :remember_me,label: 'salvar meus dados', as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Entrar" %>
    </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
