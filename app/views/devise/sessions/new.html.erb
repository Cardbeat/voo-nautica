<% content_for :title, "Entrar" %>
<div class="login container">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="panel panel-default">
      <div class="panel-heading"><h2> Acessar </h2> </div>
      <div class="panel-body">
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true %>
          <%= f.input :password,label: 'Senha', required: false %>
          <%= f.input :remember_me,label: 'salvar meus dados', as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Entrar" %>
        </div>
      <% end %>
      <div style="margin-top:15px;">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
