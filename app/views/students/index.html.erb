<% content_for :title, "Voo Nautica - Lista de alunos" %>
<div class="container login">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h2>Alunos</h2>
    </div>
    <div class="panel-body">
      <div class="form-group">
        <%= link_to("Novo Aluno", new_student_path, class: "btn btn-info btn-sm") %>
      </div>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>Nome</th>
            <th>Email</th>
            <th>Ações</th>
          </tr>
        </thead>
        <tbody>
          <% @students.each do |student| %>
          <tr>
            <td><%= student.name %></td>
            <td><%= student.email %></td>
            <td>
              <%= link_to edit_student_path(student) do %>
                <i class="fa fa-pencil"></i> Editar
              <% end %>
              <%= link_to student,  method: :delete, data: { confirm: 'Tem certeza que quer remover?' } do %>
                <i class="fa fa-trash"></i> Remover
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
