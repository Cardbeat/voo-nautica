<div class="container">
    <h1>Cadastro</h1>
    <h2>
        Dados pessoais
    </h2>
    <div class="row">

        <!-- Formulário para estudante -->

        <%= simple_nested_form_for @student do |f| %>
        <div class="col-md-8">
            <%= f.input :name, label: 'Nome:' %>
        </div>
        <div class="col-md-4">
            <%= f.input :date_birth,
       start_year: Date.today.year - 90,
       order: [:day, :month, :year],
       label: 'Data de nascimento:' %>
        </div>
    </div>
    <%= f.input :email, label: 'Email:'%>
    <div class="row">
        <div class="col-md-4">
            <%= f.input :rg, label: 'RG:' %>
        </div>
        <div class="col-md-4">
            <%= f.input :date_emission,
       start_year: Date.today.year - 90,
       order: [:day, :month, :year],
        label: 'Data de emissão:' %>
        </div>
        <div class="col-md-4">
            <%= f.input :organ_emitter, label: 'Orgão emissor:' %>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <%= f.input :cpf, label: 'CPF:' %>
        </div>
        <div class="col-md-6">
            <%= f.input :cnh, label: 'CNH:' %>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <%= f.input :nationality, label: 'Nacionalidade:' %>
        </div>
        <div class="col-md-6">
            <%= f.input :civil_status, label: 'Estado civil:' %>
        </div>
    </div>
    <%= f.input :father_name, label: 'Nome do Pai:'%>
    <%= f.input :mother_name, label: 'Nome da Mãe:'%>
    <div class="row">
        <div class="col-md-6">
            <%= f.input :scholarity, label: 'Escolaridade' %>
        </div>
        <div class="col-md-6">
            <%= f.input :profession, label: 'Profissão:' %>
        </div>
    </div>

    <!-- formulário para o endereço -->

    <h2>
        Endereço
    </h2>
    <%= f.simple_fields_for :address do |a| %>
    <%= a.input :street, label: 'Rua:' %>
    <div class="row">
        <div class="col-md-4">
            <%= a.input :district, label: 'Bairro:' %>
        </div>
        <div class="col-md-4">
            <%= a.input :city, label: 'Cidade:' %>
        </div>
        <div class="col-md-4">
            <%= a.input :cep, label: 'CEP:' %>
        </div>
    </div>
    <% end %>

    <!-- formulário para o telefone -->

    <div >
        <div >
            <%= f.fields_for :phones, @student.phones do |p| %>
            <%= p.input :phone_type, collection: Phone.phone_types.keys,
          label: 'Contato:'%>
            <%= p.input :number, label: 'Número:', placeholder: '(00)0000-0000' %>
            <%= p.link_to_remove "Remover", class: "form-control btn btn-danger" %>
            <% end %>
        </div>
        <%= f.link_to_add "Add Telefone", :phones, class: "form-control btn btn-primary" %>
    </div>

    <!-- continuação do formulário de estudante -->

    <h2>
        Informação complementar
    </h2>
    <%= f.input :vessel, label: 'Possui embarcação?' %>
    <%= f.input :vessel_experience,
       label: 'Possui expêriencia com navegação?'%>

    <!-- formulário para o curso -->

    <h2>Selecione o curso desejado</h2>
    <%= f.simple_fields_for :courses do |c| %>
    <%= c.input :course_type, collection: Course.course_types.keys,
          as: :radio_buttons, label: 'Selecione o curso desejado:',
          label_method: :humanize %>
    <% end %>

    <!-- formulário para as datas de aula prática -->

    <%= f.simple_fields_for :availability do |v| %>
    <div class="row">
        <div class="col-md-6">
            <%= v.input :date1, as: :date,
        order: [:day, :month, :year],
        label: '1º:' %>
        </div>
        <div class="col-md-6">
            <%= v.input :date2, as: :date,
        order: [:day, :month, :year],
        label: '2º:' %>
        </div>
        <div class="col-md-6">
            <%= v.input :date3, as: :date,
        order: [:day, :month, :year],
        label: '3º:' %>
        </div>
        <div class="col-md-6">
            <%= v.input :date4, as: :date,
        order: [:day, :month, :year],
        label: '4º' %>
        </div>
    </div>
    <% end %>

    <!-- Continuação do formulário do estudante -->

    <div class="row">
        <div class="col-md-6">
            <%= f.input :proof_of_address, as: :file,
       label: 'Foto do comprovante de residência:' %>
        </div>
        <div class="col-md-6">
            <%= f.input :document_photo, as: :file, label: 'Foto dos documentos:' %>
        </div>
    </div>
    <%= f.input :payment_type, collection: Student.payment_types.keys,
       label: 'Tipo de pagamento:', label_method: :humanize %>
    <!-- formulário de Referrer -->
    <%= f.simple_fields_for :referrer do |r| %>
    <%= r.input :referrer_type, collection: Referrer.referrer_types.keys,
          as: :radio_buttons, label: 'Indicação:', label_method: :humanize %>
    <% end %>
    <%= f.button :submit,'Cadastrar' %>
    <% end %>
</div>
